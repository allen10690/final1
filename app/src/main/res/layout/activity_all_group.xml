<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_to_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_button"
        android:text="回首頁"
        android:textColor="@color/back_button_text"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/button_chatroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="群組1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="群組2"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button_chatroom"
        app:layout_constraintStart_toStartOf="@+id/button_chatroom"
        app:layout_constraintTop_toBottomOf="@+id/button_chatroom" />

    <Button
        android:id="@+id/button_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="群組3"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button_map"
        app:layout_constraintStart_toStartOf="@+id/button_map"
        app:layout_constraintTop_toBottomOf="@+id/button_map" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="群組"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button_chatroom"
        app:layout_constraintEnd_toEndOf="@+id/button_chatroom"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="@+id/button_chatroom" />


</androidx.constraintlayout.widget.ConstraintLayout>