<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/holo_purple"
        android:gravity="top"
        android:orientation="horizontal">

        <!-- 按鈕：回到home -->
        <Button
            android:id="@+id/returnmenu_btn_groupinf"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="首頁" />

        <!-- 標題：群組資訊、成員 -->


        <TextView
            android:id="@+id/textView_chatroom"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="9"
            android:gravity="center"
            android:text="群組資訊              "
            android:textColor="#000000"
            android:textSize="20sp" />
        <Button
            android:id="@+id/switch_groupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="切換群組" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout_head"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 文字：群組名稱 -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="群組名稱："
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- 此處顯示該群組的"名稱" -->
            <TextView
                android:id="@+id/groupname_grpinf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/textView2"
                android:ems="15"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="XXX群組"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- 文字：QR-Code -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="QR-Code："
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- 按鈕：顯示QR-Code -->
            <Button
                android:id="@+id/button6"
                android:layout_width="64dp"
                android:layout_height="37dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/textView3"
                android:text="顯示" />
        </LinearLayout>

        <!-- 文字：群組成員 -->
        <TextView
            android:id="@+id/textView_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="群組成員："
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </LinearLayout>

    <!-- 底部按鈕排列 -->
    <LinearLayout
        android:id="@+id/linearLayout_buttons"
        android:layout_width="409dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

            <!-- 按鈕：聊天室 -->
            <Button
                android:id="@+id/chatroom_btn_grpinf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="聊天室" />

            <!-- 按鈕：地圖 -->
            <Button
                android:id="@+id/map_btn_groupinf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="地圖" />

            <!-- 按鈕：群組資訊 -->
            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="群組資訊" />

            <!-- 按鈕：行程 -->
            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="行程" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_members"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="?android:selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout_buttons"
        android:layout_below="@id/LinearLayout_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout_buttons" />




</RelativeLayout>